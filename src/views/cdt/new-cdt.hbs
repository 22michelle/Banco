<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">Nueva CDT</h3>
    </div>
    <div class="card-body text-right">
      <form action="/cdts/new-cdt" method="POST">
        <div class="mb-3">
          <label for="name">Name:</label>
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Name"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="lastname">Lastname:</label>
          <input
            type="text"
            name="lastname"
            class="form-control"
            placeholder="Lastname"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="identificaicon">Identificación:</label>
          <input
            type="text"
            name="identificaicíon"
            class="form-control"
            placeholder="Idenficiación"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="email">Email:</label>
          <input
            type="text"
            name="email"
            class="form-control"
            placeholder="Email"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="telefono">Telefono:</label>
          <input
            type="text"
            name="telefono"
            class="form-control"
            placeholder="Telefono"
            autofocus
          />
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Guardar CDT
        </button>
      </form>
    </div>
  </div>
</div>